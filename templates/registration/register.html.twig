{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<link rel="stylesheet" href="/css/register.css">

{{ form_errors(registrationForm) }}

<!-- Champ cachÃ© pour le pseudo -->
<input type="hidden" id="hiddenPseudo" name="hiddenPseudo" value="">

{{ form_start(registrationForm) }}
<h1>Please Register</h1>

<!-- Personnalisation des champs du formulaire -->
<div class="form-group">
    {{ form_label(registrationForm.email, 'Email') }}
    {{ form_widget(registrationForm.email, {
        'attr': {'class': 'form-control'}
    }) }}
    {{ form_errors(registrationForm.email) }}
</div>

<div class="form-group">
    {{ form_label(registrationForm.plainPassword, 'Password') }}
    {{ form_widget(registrationForm.plainPassword, {
        'attr': {'class': 'form-control'}
    }) }}
    {{ form_errors(registrationForm.plainPassword) }}
</div>

<div class="form-group">
    {{ form_label(registrationForm.agreeTerms, 'Agree to Terms') }}
    {{ form_widget(registrationForm.agreeTerms) }}
    {{ form_errors(registrationForm.agreeTerms) }}
</div>

<button type="submit" class="btn">Register</button>

{{ form_end(registrationForm) }}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pseudo.js') }}"></script>
{% endblock %}
{% endblock %}
